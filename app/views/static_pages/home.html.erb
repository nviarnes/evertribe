<% if signed_in? %>
  <div class="row-fluid">
    <aside class="span2">
      <section>
        <%= render 'shared/user_info' %>
      </section>
      <section>
        <%= render 'shared/stats' %>
      </section>
      <section>
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>

    <div class="span5">
      <ul class="thumbnails">
        <li class="span3">
          <div class="thumbnail">
            <%= link_to image_tag("/assets/evertribethumbnail.png"), evertribe_path %>
            <h5>EverTribe</h5>
          </div>
        </li>
        <li class="span3">
          <div class="thumbnail">
            <%= link_to image_tag("/assets/galaxyquestthumbnail.png"), galaxyquest_path %>
            <h5>GalaxyQuest</h5>
          </div>
        </li>
        <li class="span3">
          <div class="thumbnail">
            <%= link_to image_tag("/assets/dungeoneerthumbnail.png"), dungeoneer_path %>
            <h5>Dungeoneer</h5>
          </div>
        </li>
      </ul>
    </div>
    <div class="span2">
      <h3>Idea Feed</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the EverTribe beta.</h1>

    <h2>
      This is the home page for the EverTribe beta!
    </h2>

    <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>

<% end %>